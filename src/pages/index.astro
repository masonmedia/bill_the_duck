---

import Layout from '../layouts/MainLayout.astro';
// import ButtonPlus from '../components/ButtonPlus.astro';
import data from '../data/bill.json';
import { Image } from 'astro:assets';
import ConfettiHero from '../components/ConfettiHero.astro';
import duckHero from "../assets/images/icons/duck.png";
// import confetti from "../assets/images/backgrounds/confetti.png";
import badge from "../assets/images/icons/anniversary_badge.png";
import duckBlue from "../assets/images/icons/blue_duck2.png";
// import collage from "../assets/images/duck_paper_collage.jpg";

const ducks = await Astro.glob("../assets/images/icons/*");
// https://markjames.dev/blog/dynamically-importing-images-astro
const response = await fetch('https://jsonplaceholder.typicode.com/albums/1/photos');
const apiData = await response.json();
// const randomUser = apiData.results;

// const images = await Astro.glob("/src/assets/images/*").then(files => {
//   return files.map(file => file.default);
// });

---

<Layout title="Paymentus 20th Anniversary Home" description="Big time.">
		<main>
			
			<div class="container-fluid px-0 pt-3 m-0 bg-billebration text-light">
				<div class="row min-vh-100 position-relative">
					<ConfettiHero />
					<!-- <img class="position-absolute z-0 top-50 start-50 translate-middle w-75" src="./assets/images/backgrounds/confetti.png" alt=""> -->
					<!-- <Image class="position-absolute z-0 top-50 start-50 translate-middle w-75 h-auto p-5" src={confetti} alt=""/> -->
					<Image class="position-absolute top-50 start-50 translate-middle w-50 h-auto" src={duckHero} alt=""/>
					<!-- <img class="position-absolute top-50 start-50 translate-middle w-50 h-auto" src={ducks[0].default.src} alt=""> -->
					<div class="col-lg-12 d-flex flex-column justify-content-center align-items-center text-center position-relative">
						<h1 class="fw-900 text-uppercase" style="font-size: 16vw; color: transparent; -webkit-text-stroke: 2px #ffffff;">{data.hero.title}</h1>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8 offset-lg-2 text-center p-5">
						<Image class="h-auto" style="width: 35%; filter: drop-shadow(2px 4px 6px black);" src={badge} alt=""/>
						<h2 class="display-4 fw-bold text-uppercase my-3">{data.cheers.title}</h2>
						<p class="fs-5">{data.cheers.content}</p>
					</div>
				</div>

				<div class="row row-cols-1 row-cols-lg-2 p-5">
					<div class="col">
						<div class="d-flex flex-column justify-content-center align-items-start p-5">
							<h2 class="display-4 fw-bold text-uppercase mb-3 ">{data.meet_bill.title}</h2>
							<p class="fs-5">{data.meet_bill.content}</p>
						</div>
					</div>
					<div class="col d-flex justify-content-center align-items-center">
						<Image style="width: 400px; height: auto; filter: drop-shadow(4px 5px 11px black);" src={duckBlue} width="400" height="200" alt=""/>
					</div>
					</div>

					<div class="row pb-3">
						<div class="col-lg-8 offset-lg-2 text-center">
							<h2 class="display-4 fw-bold text-uppercase">The Bill Bio</h2>
						</div>
					</div>

					<div class="row row-cols-1 row-cols-lg-2 g-3">
						<div class="col">
							<div class="p-4">

								<!-- <div class="alert bg-midnight-blue rounded-4 shadow p-4" role="alert">
									<span class="badge bg-purple fw-light mb-2" style="font-size: 19px">{item.title}</span>
									<p class="mb-0">{item.content}</p>
								</div> -->
								{
									data.bill_bio.slice(0,4).map((item) => (
									<div class="d-flex bg-midnight-blue rounded-4 p-3 mb-2">
										<div class="flex-shrink-0 d-flex justify-content-center align-items-center bg-purple rounded-3">
											<i class:list={["bi fs-1 py-2 px-3", item.icon]}></i>
										</div>
										<div class="flex-grow-1 ms-3">
											<span class="badge bg-purple-dark fw-light mb-3" style="font-size: 19px">{item.title}</span>
											<p class="small">{item.content}</p>
										</div>
									</div>
									))
								}
							</div>
						</div>
						<div class="col">
							<div class="p-4">
								<!-- <div class="alert bg-midnight-blue rounded-4 shadow p-4" role="alert">
									<span class="badge bg-purple fw-light mb-3" style="font-size: 19px">{item.title}</span>
									<p class="mb-0">{item.content}</p>
								</div> -->
									{
										data.bill_bio.slice(4,8).map((item) => (
										<div class="d-flex bg-midnight-blue rounded-4 p-3 mb-2">
										<div class="flex-shrink-0 d-flex justify-content-center align-items-center bg-purple rounded-3">
											<i class:list={["bi fs-1 py-2 px-3", item.icon]}></i>
										</div>
										<div class="flex-grow-1 ms-3">
											<span class="badge bg-purple-dark fw-light mb-3" style="font-size: 19px">{item.title}</span>
											<p class="small"><Fragment set:html={item.content} /></p>
										</div>
									</div>
										))
									}
							</div>
						</div>
				</div>
	
					<div class="row p-4">
						<div class="col-lg-8 offset-lg-2 text-center p-5">
							<h2 class="display-4 fw-bold text-uppercase">
								{data.journey[0].title}
							</h2>
							<p class="fs-5">{data.journey[0].content}</p>
						</div>
						{
							data.journey.slice(1,5).map((item) => (
								<div class="col-lg-3 col-md-6 text-dark p-2">

									<div class="card bg-midnight-blue text-light rounded-4" aria-hidden="true" style="min-height: 550px">
										
										<img src={item.img} class="card-img-top w-100 p-3" alt="...">
										<div class="card-body">
											
											<h4 class="card-title fw-bold text-uppercase">
												<span class="badge rounded-3 text-bg-primary mb-2 p-2">
												<i class:list={["bi fs-3", item.icon]}></i>
												</span>
												{item.title}</h4>
											<p class="card-text">{item.content}</p>
										</div>
							  		</div>
								</div>
							))
						}
					</div>



					<!-- bill collage -->

					<div class="row pb-5">
						<div class="col-lg-12 min-vh-50 d-flex align-items-center justify-content-center py-5">
							<img src="/img/duck_paper_collage_trans.png" class="w-100" alt="...">
						</div>
					</div>

					<!-- contest -->

					<div class="row position-relative min-vh-50 p-5">
						<img class="d-none d-lg-block position-absolute z-0 top-50 start-50 translate-middle w-75" src="/img/confetti.png" alt="">
						<img class="d-block d-lg-none position-absolute z-0 top-50 start-50 translate-middle w-100" src="/img/confetti.png" alt="">
						<div id="contest" class="col-lg-8 offset-lg-2 d-flex flex-column justify-content-center align-items-center text-center bg-primary min-vh-50 rounded-4 p-5 position-relative z-0" style="z-index: 100; --bs-bg-opacity: .7;">
							<p class="fs-5"><Fragment set:html={data.contest.content} /></p>
							<div class="d-flex">
								<a href="marketing@paymentus.com">
								<button class="btn btn-magenta me-2 shadow">Enter now</button>
								</a>
								<a href="marketing@paymentus.com">
								<button class="btn btn-magenta shadow">Request a Duck</button>
								</a>
							</div>
						</div>
					</div>

					<div class="py-5"></div>

					<!-- what bill means -->

					<div class="row g-5 p-5">
						<div class="col-lg-12">
							<h2 class="display-4 fw-bold text-uppercase">{data.what_bill_means.title}</h2>
						</div>
						{ data.what_bill_means.quotes.map((item) => (
							<div id="bill_quotes" class="col-md-6 col-lg-4 flex-fill position-relative">
								<div class="p-5 text-start bg-purple text-light rounded-5 shadow-lg" style="min-height: 350px">
									<p class="fs-5">{item}</p>
								</div>
							</div>
						))}
					</div>

					<!-- ask bill -->

					<div class="row row-cols-1 row-cols-lg-2 g-4 p-4">
						<div class="col d-flex flex-column justify-content-center align-items-start text-center text-lg-start">
							<div class="p-3">
								<h2 class="display-4 fw-bold text-uppercase">{data.ask_bill.title}</h2>
								<p class="fs-5"><Fragment set:html={data.ask_bill.content} /></p>
								<a href="mailto:marketing@paymentus.com?subject=Bill Better Topic"></a>
								<button class="btn btn-primary">{data.ask_bill.button}</button>
							</div>
						</div>
						<div class="col d-flex flex-column justify-content-center align-items-center min-vh-500">
							<img src="/img/bill_better.png" class="w-100" alt="Paymentus Bill Better">	
						</div>
					</div>

					<div class="row p-4">
						<div class="col-lg-8 offset-lg-2 text-center p-5">
							<h2 class="display-4 fw-bold text-uppercase">{data.follow.title}</h2>
							<p class="fs-5"><Fragment set:html={data.follow.content} /></p>
						</div>
					</div>

					<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3 px-4">
							{
								apiData.slice(0,4).map((item) => (
								<div class="col">
							<div class="card" aria-hidden="true">
								<img src="https://placehold.co/1000x500" class="card-img-top w-100" alt="...">
								<div class="card-body">
								  <h5 class="card-title">
									{item.title}
								  </h5>
								  <p class="card-text">
									Ut incididunt enim ex eu exercitation. Irure Lorem voluptate amet esse sunt quis sunt. Aliquip id elit amet magna esse exercitation pariatur quis enim adipisicing. Ex consectetur eu nulla labore.
								  </p>
								  <a class="btn btn-primary disabled placeholder col-6" aria-disabled="true"></a>
								</div>
							  </div>
							</div>
							  ))
							}
						</div>

					<div class="py-5"></div>
				</div><!--end container-->
		</main>
	</Layout>

	<style>
#contest::before {
	content: "Billebration Photo Contest";
	/* Some light styling */
	font-weight: bold;
	position: absolute;
	height: 100%;
	width: 100%;
	left: 0px;
	top: -40px;
	z-index: -1;
	text-align: center;
	font-size: 8vmin;
	// font-family: 'Galada', 'Brush Script MT', cursive;
}

#bill_quotes:before {
	content: "‚ùù";
	font-weight: bold;
	position: absolute;
	text-shadow: 2px 2px 5px #000;
	left: 20px;
	top: -70px;
	z-index: 0;
	font-size: 110px;
}
	</style>
