---

import Layout from '../layouts/MainLayout.astro';
// import ButtonPlus from '../components/ButtonPlus.astro';
import data from '../data/bill.json';
import { Image } from 'astro:assets';
import duckHero from "../assets/images/icons/duck.png";
import confetti from "../assets/images/backgrounds/confetti.png";
import badge from "../assets/images/icons/anniversary_badge.png";
import duckBlue from "../assets/images/icons/duck_blue.png";

const ducks = await Astro.glob("../assets/images/icons/*");
// https://markjames.dev/blog/dynamically-importing-images-astro
const response = await fetch('https://jsonplaceholder.typicode.com/albums/1/photos');
const apiData = await response.json();
// const randomUser = apiData.results;

// const images = await Astro.glob("/src/assets/images/*").then(files => {
//   return files.map(file => file.default);
// });

---

<Layout title="Paymentus 20th Anniversary Home" description="Big time.">
		<main class="w-100">
			<div class="container-fluid px-0 pt-3 m-0 bg-billebration text-light">
				<div class="row min-vh-100 position-relative">
					<!-- <img class="position-absolute z-0 top-50 start-50 translate-middle w-75" src="./assets/images/backgrounds/confetti.png" alt=""> -->
					<Image class="position-absolute z-0 top-50 start-50 translate-middle w-75 h-auto p-5" src={confetti} alt=""/>
					<Image class="position-absolute top-50 start-50 translate-middle w-50 h-auto" src={duckHero} alt=""/>
					<!-- <img class="position-absolute top-50 start-50 translate-middle w-50 h-auto" src={ducks[0].default.src} alt=""> -->
					<div class="col-lg-12 d-flex flex-column justify-content-center align-items-center text-center position-relative">
						<h1 class="fw-900 text-uppercase" style="font-size: 16vw; color: transparent; -webkit-text-stroke: 2px #ffffff;">Billebration</h1>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8 offset-lg-2 text-center">
						<Image class="h-auto" style="width: 35%; filter: drop-shadow(2px 4px 6px black);" src={badge} alt=""/>
						<h2 class="display-4 fw-bold font-galada my-3">Cheers to 20 Years!</h2>
						<p class="fs-5">In 2004, an idea was hatched: simplify bill payments for the millions of bill payers throughout North America. To celebrate this idea, Paymentus welcomed someone who knows a thing or two about bills – Bill the Duck. For two decades, Bill has helped our clients keep their customer service afloat, get their ducks in a row and best serve those who have bills. Today, we’re excited to celebrate Bill and all those who have flown with us over these last 20 years. Here’s to greater successes to come!</p>
					</div>
				</div>

				<div class="row row-cols-1 row-cols-lg-2 p-5">
					<div class="col">
						<div class="d-flex flex-column justify-content-center align-items-start p-5">
							<h2 class="display-4 fw-bold mb-3 font-galada">Meet Bill</h2>
							<p class="fs-4">You’ve seen him at trade shows, on Instagram and maybe even on a pair of shoes or two. b Get to know our fine-feathered friend and learn more about his dedication to making life easy for everyone – and everything – who has bills.</p>
						</div>
					</div>
					<div class="col d-flex justify-content-center align-items-center">
						<Image style="width: 400px; height: auto; filter: drop-shadow(4px 5px 11px black);" src={duckBlue} width="400" height="200" alt=""/>
					</div>
					</div>

					<div class="row">
						<div class="col-lg-8 offset-lg-2 text-center">
							<h2 class="display-4 fw-bold font-galada">The Bill Bio</h2>
						</div>
					</div>

					<div class="row row-cols-1 row-cols-lg-2 g-3">
						<div class="col">
							<div class="p-5">
								{
									data.bill_bio.slice(0,4).map((item) => (
										<div class="alert bg-purple rounded-4 shadow" role="alert">
											<h2 class="mb-0">{item.title}: <span class="font-galada">{item.content}</span></h2>
										</div>
									))
								}
							</div>
						</div>
						<div class="col">
							<div class="p-5">
									{
										data.bill_bio.slice(4,8).map((item) => (
											<div class="alert bg-purple rounded-4 shadow" role="alert">
												<h2 class="mb-0">{item.title}: <span class="font-galada">{item.content}</span></h2>
											</div>
										))
									}
							</div>
						</div>
				</div>
	
					<div class="row p-4">
						<div class="col-lg-8 offset-lg-2 text-center p-5">
							<h2 class="display-4 fw-bold font-galada">
								{data.journey[0].title}
							</h2>
							<p class="fs-4">{data.journey[0].content}</p>
						</div>
						{
							data.journey.slice(1,5).map((item, index) => (
								<div class="col-lg-3 col-md-6 text-dark p-2">
									<div class:list={['p-4 rounded-4 min-vh-500', {'bg-silver': index === 2 ? 'bg-danger' : 'bg-success'}]}>
										<i class="bi bi-trophy-fill d-inline-block fs-1 border border-secondary rounded-4 px-3 py-2"></i>
										<h3 class="fs-2 fw-bold font-galada my-3">{item.title}</h3>
										<p>{item.content}</p>
									</div>
								</div>
							))
						}
					</div>

					<div class="row row-cols-1 row-cols-md-2 g-4 p-4">
						<div class="col d-flex flex-column justify-content-center align-items-start">
							<div class="p-3">
								<h2 class="display-4 fw-bold font-galada">{data.join.title}</h2>
								<p class="fs-5">{data.join.content}</p>
								<div class="btn btn-primary">{data.join.button}</div>
							</div>
						</div>
						<div class="col p-5">
							<img src="https://placehold.co/300x300" class="placeholder card-img-top w-100 rounded-circle shadow" alt="...">
							<!-- <div class="card" aria-hidden="true">
								<img src="https://placehold.co/1000x500" class="placeholder card-img-top w-100" alt="...">
								<div class="card-body">
								  <h5 class="card-title placeholder-glow">
									<span class="placeholder col-6"></span>
								  </h5>
								  <p class="card-text placeholder-glow">
									<span class="placeholder col-7"></span>
									<span class="placeholder col-4"></span>
									<span class="placeholder col-4"></span>
									<span class="placeholder col-6"></span>
									<span class="placeholder col-8"></span>
								  </p>
								  <a class="btn btn-primary disabled placeholder col-6" aria-disabled="true"></a>
								</div>
							  </div> -->
						</div>
					</div>

					<!-- contest -->

					<div class="row position-relative min-vh-50 p-5">
						<img class="position-absolute z-0 top-50 start-50 translate-middle w-75" src="src/assets/images/backgrounds/confetti.png" alt="">
						<div id="contest" class="col-lg-8 offset-lg-2 d-flex flex-column justify-content-center align-items-center text-center bg-electric-blue min-vh-50 rounded-4 p-5 position-relative" style="z-index: 100">
							<p class="fs-5"><Fragment set:html={data.contest.content} /></p>
						</div>
					</div>

					<div class="py-5"></div>

					<!-- what bill means -->

					<div class="row g-5 p-5">
						<div class="col-lg-12">
							<h2 class="display-4 fw=bold font-galada">{data.what_bill_means.title}</h2>
						</div>
						{ data.what_bill_means.quotes.map((item, index) => (
							<div id="bill_quotes" class="col-md-6 col-lg-4 flex-fill position-relative">
								<div class="p-5 text-start min-vh-50 bg-purple text-light rounded-5 shadow-lg">
									<p class="fs-5">{item}</p>
								</div>
							</div>
						))}
					</div>

					<!-- ask bill -->

					<div class="row row-cols-1 row-cols-md-2 g-4 p-4">
						<div class="col d-flex flex-column justify-content-center align-items-start">
							<div class="p-3">
								<h2 class="display-4 fw-bold font-galada">{data.ask_bill.title}</h2>
								<p class="fs-5">{data.ask_bill.content}</p>
								<button class="btn btn-primary">{data.ask_bill.button}</button>
							</div>
						</div>
						<div class="col d-flex flex-column justify-content-center align-items-center bg-electric-blue min-vh-500 p-5 rounded-5 shadow-lg">
							<h2 class="fw-bold text-uppercase" style="font-size: 12vmin; text-shadow: 5px 5px 5px #000">#BillBetter</h2>
						</div>
					</div>

					<div class="row p-4">
						<div class="col-lg-8 offset-lg-2 text-center p-5">
							<h2 class="display-4 fw-bold font-galada">
								{data.follow.title}
							</h2>
							<p class="fs-4">{data.follow.content}</p>
						</div>
					</div>

					<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3 px-4">
							{
								apiData.slice(0,4).map((item) => (
								<div class="col">
							<div class="card" aria-hidden="true">
								<img src="https://placehold.co/1000x500" class="card-img-top w-100" alt="...">
								<div class="card-body">
								  <h5 class="card-title placeholder-glow">
									{item.title}
								  </h5>
								  <p class="card-text placeholder-glow">
									Ut incididunt enim ex eu exercitation. Irure Lorem voluptate amet esse sunt quis sunt. Aliquip id elit amet magna esse exercitation pariatur quis enim adipisicing. Ex consectetur eu nulla labore.
								  </p>
								  <a class="btn btn-primary disabled placeholder col-6" aria-disabled="true"></a>
								</div>
							  </div>
							</div>
							  ))
							}
						</div>

					<div class="py-5"></div>


					
				</div><!--end container-->

			

		</main>
	</Layout>

	<style>
#contest::before {
	content: "Billebration Photo Contest";
	/* Some light styling */
	font-weight: bold;
	position: absolute;
	height: 100%;
	width: 100%;
	left: 0px;
	top: -40px;
	z-index: -1;
	text-align: center;
	font-size: 8vmin;
	font-family: 'Galada', 'Brush Script MT', cursive;
}

#bill_quotes:before {
	content: "❝";
	font-weight: bold;
	position: absolute;
	text-shadow: 2px 2px 5px #000;
	left: 20px;
	top: -70px;
	z-index: 0;
	font-size: 110px;
}
	</style>
