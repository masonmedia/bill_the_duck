---
import Layout from '../layouts/MainLayout.astro';
import data from '../data/bill.json';
import TheHero from '../components/TheHero.astro';
import Post1 from '../components/IGpost1.astro';
import Post2 from '../components/IGpost2.astro';
import Post3 from '../components/IGpost3.astro';
import Post4 from '../components/IGpost4.astro';

const ducks = await Astro.glob("../assets/images/icons/*");
