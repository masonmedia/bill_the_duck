---

<Layout title="Paymentus 20th Anniversary Home" description="Big time.">
		<main>
			
			<div class="container-fluid px-0 pt-3 m-0 bg-billebration text-light">
				<TheHero />
				<div class="row">
					<div class="col-lg-8 offset-lg-2 text-center p-5">
						<img class="mb-2" style="width: 40%; filter: drop-shadow(2px 4px 6px black);" src="/img/icons/badge.png" alt="">
						<h2 class="display-4 fw-bold text-uppercase my-3">{data.cheers.title}</h2>
						<p class="fs-5">{data.cheers.content}</p>
					</div>
				</div>

				<div class="row row-cols-1 row-cols-lg-2 p-5">
					<div class="col d-flex flex-column justify-content-center align-items-start">
						<div class="p-5">
							<h2 class="display-4 fw-bold text-uppercase mb-3 ">{data.meet_bill.title}</h2>
							<p class="fs-5">{data.meet_bill.content}</p>
						</div>
					</div>
					<div class="col d-flex justify-content-center align-items-center">
						<img src="/img/blue_duck.png" class="w-100" alt="">
					</div>
				</div>

				<div class="row pb-3">
					<div class="col-lg-8 offset-lg-2 text-center">
						<h2 class="display-4 fw-bold text-uppercase">The Bill Bio</h2>
					</div>
				</div>

				<div class="row row-cols-1 row-cols-lg-2 g-3">
					<div class="col">
						<div class="p-4">
							{
								data.bill_bio.slice(0,4).map((item) => (
								<div class="d-flex bg-purple-gradient rounded-4 p-3 mb-2">
									<div class="flex-shrink-0 d-flex justify-content-center align-items-center bg-purple rounded-3">
										<i class:list={["bi fs-1 py-2 px-3", item.icon]}></i>
									</div>
									<div class="flex-grow-1 ms-3">
										<span class="badge bg-purple-dark fw-light mb-2" style="font-size: 19px">{item.title}</span>
										<p class="small">{item.content}</p>
									</div>
								</div>
								))
							}
						</div>
					</div>
					<div class="col">
						<div class="p-4">
								{
									data.bill_bio.slice(4,8).map((item) => (
									<div class="d-flex bg-purple-gradient rounded-4 p-3 mb-2">
										<div class="flex-shrink-0 d-flex justify-content-center align-items-center bg-purple rounded-3">
											<i class:list={["bi fs-1 py-2 px-3", item.icon]}></i>
										</div>
										<div class="flex-grow-1 ms-3">
											<span class="badge bg-purple-dark fw-light mb-2" style="font-size: 19px">{item.title}</span>
											<p class="small"><Fragment set:html={item.content} /></p>
										</div>
									</div>
								))
							}
						</div>
					</div>
				</div>
	
					<div class="row p-4">
						<div class="col-lg-8 offset-lg-2 text-center p-5">
							<h2 class="display-4 fw-bold text-uppercase">
								{data.journey[0].title}
							</h2>
							<p class="fs-5">{data.journey[0].content}</p>
						</div>
						{
							data.journey.slice(1,5).map((item) => (
								<div class="col-lg-3 col-md-6 text-dark p-2">
									<div class="card bg-midnight-blue text-light rounded-4" aria-hidden="true" style="min-height: 550px">
										<img src={item.img} class="card-img-top w-100 p-3" alt={item.title}>
										<div class="card-body">
											<h4 class="card-title fw-bold text-uppercase">{item.title}</h4>
											<p class="card-text">{item.content}</p>
										</div>
							  		</div>
								</div>
							))
						}
					</div>

					<!-- bill collage -->

					<div class="row pb-5">
						<div class="col-lg-12 min-vh-50 d-flex align-items-center justify-content-center py-5">
							<img src="/img/duck_collage_trans.png" class="w-100" alt="">
						</div>
						<div id="request-a-duck"></div>
					</div>

					<!-- contest -->


					<div class="row position-relative min-vh-50 p-5">
						<img class="d-none d-lg-block position-absolute z-0 top-50 start-50 translate-middle w-75" src="/img/confetti.png" alt="">
						<img class="d-block d-lg-none position-absolute z-0 top-50 start-50 translate-middle w-100" src="/img/confetti.png" alt="">
						<div id="contest" class="col-lg-8 offset-lg-2 d-flex flex-column justify-content-center align-items-center text-center bg-primary min-vh-50 rounded-4 p-5 position-relative z-0" style="z-index: 100; --bs-bg-opacity: .7;">
							<h2 class="display-4 fw-bold text-uppercase mb-3">{data.contest.title}</h2>
							<p class="fs-5"><Fragment set:html={data.contest.content} /></p>
							<div class="d-flex">
								<a href="mailto:marketing@paymentus.com">
								<button class="btn btn-magenta me-2 shadow">{data.contest.button}</button>
								</a>
								<a href="mailto:marketing@paymentus.com">
								<button class="btn btn-magenta shadow">{data.contest.button2}</button>
								</a>
							</div>
						</div>
					</div>

					<div class="py-5"></div>

					<!-- what bill means -->

					<div class="row g-5 p-5">
						<div class="col-lg-12">
							<h2 class="display-4 fw-bold text-uppercase">{data.what_bill_means.title}</h2>
						</div>
						{ 
							data.what_bill_means.quotes.map((item) => (
							<div class="col-md-6 col-lg-4 flex-fill">
								
								
								<div class="p-5 d-flex align-items-center justify-content-center text-start text-light position-relative" style="min-height: 350px">
			
									<i class="bi bi-quote position-absolute start-0 z-1" style="top: -20%; font-size: 100px"></i>
									<img src={item.img} class="position-absolute top-0 start-0 z-0 w-100 h-100 rounded-5" style="object-fit: cover; aspect-ratio: 16/9; filter: brightness(50%)" alt="">
									<p class="position-relative z-1">{item.content}</p>
								</div>
							</div>
							))
						}
					</div>

					<!-- ask bill -->

					<div class="row row-cols-1 row-cols-lg-2 g-4 p-4">
						<div class="col d-flex flex-column justify-content-center align-items-start text-center text-lg-start">
							<div class="p-3">
								<h2 class="display-4 fw-bold text-uppercase">{data.ask_bill.title}</h2>
								<p class="fs-5"><Fragment set:html={data.ask_bill.content} /></p>
								<a href="mailto:marketing@paymentus.com?subject=Bill Better Topic">
									<button class="btn btn-primary">{data.ask_bill.button}</button>
								</a>
							</div>
						</div>
						<div class="col d-flex flex-column justify-content-center align-items-center min-vh-500">
							<img src="/img/bill_better.png" class="w-100" alt="Paymentus Bill Better">	
						</div>
					</div>

					<div class="row p-4">
						<div class="col-lg-8 offset-lg-2 text-center p-5">
							<h2 class="display-4 fw-bold text-uppercase">{data.follow.title}</h2>
							<p class="fs-5"><Fragment set:html={data.follow.content} /></p>
						</div>
					</div>

					<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3 px-4">
						<div class="col">
							<Post1 />
						</div>
						<div class="col">
							<Post2 />
						</div>
						<div class="col">
							<Post3 />
						</div>
						<div class="col">
							<Post4 />
						</div>
					
					</div>

				<div class="py-5"></div>
			</div><!--end container-->
		</main>
	</Layout>

	<style>

#bill_quotes:before {
	content: "‚ùù";
	font-weight: bold;
	position: absolute;
	text-shadow: 2px 2px 5px #000;
	left: 20px;
	// top: -70px;
	z-index: 1;
	font-size: 110px;
}
	</style>
