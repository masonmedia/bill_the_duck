---

import Layout from '../layouts/MainLayout.astro';
import ButtonPlus from '../components/ButtonPlus.astro';
import data from '../data/bill.json';
---

<style>
    .grid-1 {
        display: grid;;
      margin: 0 auto;
      grid-template-columns: 1fr;
    }
    .grid-2 {
        display: grid;;
      margin: 0 auto;
      gap: 1rem;
      grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    }
    .fs-img {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .body-img {
        width: 100%;
        object-fit: cover;
        border-radius: 23px;
    }
    .rounded {
        border-radius: 23px;
    }
    .position-relative {
        position: relative;
    }
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        box-sizing: border-box;
        gap: 20px;
     }

.flex-item {
  /* width: 30%; */
  /* border: 1px solid #000; */
  /* flex-grow: 1; */
  flex: 1 0 400px;
  /* min-height: 120px; */
  box-sizing: border-box;
  margin: 0 5px 5px;
  padding: 50px;
  justify-content: space-between;
  text-align: center;
}
    .flex-left-center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        text-align: left;
    }
    p {
        text-wrap: balance;
    }
    .btn-gradient {
    background: linear-gradient(105deg, #7B53F5, #2364F6, #56C3FF);
    /* background: linear-gradient(#00133D, #00133D), linear-gradient(105deg, 00133D. #7B53F5 0%, #2364F6 25%, #56C3FF 50%, #AA206D 75%); */
    color: #fff;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 13px;
    padding: 10px 20px;
}
  .card {
    filter: drop-shadow(3px 5px 7px #000); 
    border-radius: 23px;
    background: #092359;
  }
  img.icon {
    /* border: 1px solid blue; */
    border-radius: 23px;
    background: #173678;
    padding: 30px;
    width: 150px;
    height: 150px;
    margin-bottom: 20px;
    box-shadow: 0 0 10px #000;
    /* filter: drop-shadow(2px 2px 5px #000); */
  }
    </style>

